pipeline{

    agent {
      docker {
        image 'maven:3.6.3-jdk-11'
      }
    }
    
    stages{
      stage('Test') {
        steps{
            echo 'Test stage'
        }
      }
      
      stage('Build'){
        steps {
            sh 'mvn --version'
        }
      }
    }
    
    post{
      Success {
        echo 'Success'
      }
    }
}
